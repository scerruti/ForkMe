<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jointheleague.forkme.controller.ForkMe">
    <top>
              <HBox>
                  <children>
                      <StackPane alignment="CENTER_LEFT" minHeight="200.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                          <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%title" />
                          </children>
                      </StackPane>
                      <StackPane minHeight="180.0" minWidth="240.0">
                      <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="100.0">
                          <children>
                              <TextField fx:id="username" promptText="%username.prompt" />
                              <PasswordField fx:id="password" promptText="%password.prompt" />
                              <Text fx:id="loginError" fill="red" strokeType="OUTSIDE" strokeWidth="0.0" />
                              <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" text="%login.button.text" />
                          </children>
                  <padding>
                     <Insets top="40.0" />
                  </padding>
                      </VBox>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
                      </StackPane>
                  </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
              </HBox>

    </top>
</BorderPane>
