<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root alignment="CENTER" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fx:id="avatar" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
    <Text fx:id="name">
      <font>
         <Font size="10.0" />
      </font></Text>
    <VBox fx:id="actionPane" alignment="TOP_CENTER" maxWidth="100" visible="false">
        <PasswordField fx:id="passwordField" promptText="%password.prompt">
         <font>
            <Font size="10.0" />
         </font></PasswordField>
        <Text fx:id="errorMessage" fill="red">
         <font>
            <Font size="10.0" />
         </font></Text>
        <TilePane alignment="CENTER">
            <Button fx:id="cancelButton" text="%cancel.button.text">
            <font>
               <Font size="10.0" />
            </font></Button>
            <Button fx:id="loginButton" text="%login.button.text">
            <font>
               <Font size="10.0" />
            </font></Button>
        </TilePane>
    </VBox>
</fx:root>
